<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	       xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                
                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
">

    <cm:property-placeholder persistent-id="org.opennms.features.notifications.twilio.cfg">
        <cm:default-properties>
            <cm:property name="validityPeriod" value="14400"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="eventDao" interface="org.opennms.netmgt.dao.api.EventDao" availability="mandatory"/>
    <reference id="nodeDao" interface="org.opennms.netmgt.dao.api.NodeDao" availability="mandatory"/>

    <!-- The config manager will manually pull properties from the configuration file -->
    <bean id="configManager" class="org.opennms.features.notifications.twilio.internal.ConfigManager"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="twilio:send-message">
            <action class="org.opennms.features.notifications.twilio.shell.internal.SendMessageCommand">
                <property name="configManager" ref="configManager"/>
            </action>
        </command>
    </command-bundle>

</blueprint>